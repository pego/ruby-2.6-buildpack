#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2

echo "üîß Setting up environment variables..."
export PATH="/usr/bin:$PATH"
export LDFLAGS="-L/usr/lib -Wl,-rpath,/usr/lib"
export CPPFLAGS="-I/usr/include"
export PKG_CONFIG_PATH="/usr/lib/pkgconfig"

echo "üì¶ Installing OpenSSL 1.1.1..."
apt-get update && apt-get install -y \
  libssl1.1 \
  libssl-dev

# Debug: Verifica che OpenSSL 1.1.1 sia installato
echo "üîç Checking OpenSSL version..."
openssl version -a || echo "‚ö†Ô∏è OpenSSL not found!"

echo "üîß Installing Ruby 2.6.10 with OpenSSL 1.1.1..."
mkdir -p $BUILD_DIR/tmp_ruby_build
cd $BUILD_DIR/tmp_ruby_build

# Scarica e decomprime Ruby 2.6.10
curl -o ruby.tar.gz https://cache.ruby-lang.org/pub/ruby/2.6/ruby-2.6.10.tar.gz
tar -xzvf ruby.tar.gz --strip-components=1

# Configura Ruby per usare OpenSSL 1.1.1
echo "‚öôÔ∏è Configuring Ruby..."
./configure --prefix=$BUILD_DIR/.ruby \
  --with-openssl-dir=/usr \
  --enable-shared \
  LDFLAGS="-L/usr/lib -Wl,-rpath,/usr/lib" \
  CPPFLAGS="-I/usr/include" \
  OPENSSL_CFLAGS="-I/usr/include" \
  OPENSSL_LIBS="-L/usr/lib -lssl -lcrypto"

if [ $? -ne 0 ]; then
  echo "‚ùå Errore durante la configurazione di Ruby!"
  exit 1
fi

# Compilazione
echo "üõ†Ô∏è Compiling Ruby..."
make -j$(nproc)

if [ $? -ne 0 ]; then
  echo "‚ùå Errore durante la compilazione di Ruby!"
  exit 1
fi

# Installazione
echo "üì¶ Installing Ruby..."
make install

if [ $? -ne 0 ]; then
  echo "‚ùå Errore durante l'installazione di Ruby!"
  exit 1
fi

# Debug: Verifica che Ruby sia stato installato
if [ ! -f "$BUILD_DIR/.ruby/bin/ruby" ]; then
  echo "‚ùå Errore: Ruby non √® stato installato correttamente!"
  ls -l $BUILD_DIR/.ruby
  exit 1
fi

# Verifica se Ruby riconosce OpenSSL
echo "üîç Checking OpenSSL in Ruby..."
$BUILD_DIR/.ruby/bin/ruby -ropenssl -e 'puts OpenSSL::OPENSSL_VERSION'

# Forza la compilazione dell'estensione OpenSSL
echo "üîß Forcing OpenSSL extension compilation..."
cd $BUILD_DIR/.ruby/lib/ruby/2.6.0/ext/openssl
$BUILD_DIR/.ruby/bin/ruby extconf.rb
make && make install

# Debug finale
echo "‚úÖ Verifying OpenSSL support after installation..."
$BUILD_DIR/.ruby/bin/ruby -ropenssl -e 'puts OpenSSL::OPENSSL_VERSION'

echo "üöÄ Ruby 2.6.10 installed successfully with OpenSSL 1.1.1!"